{
  "git": {
    "changelog": "npx changelogen",
    "commitMessage": "chore: release v${version}",
    "commitArgs": "--no-verify",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "release": true
  },
  "hooks": {
    "before:init": ["git pull", "pnpm lint"],
    "after:bump": "npx changelogen --output CHANGELOG.md"
  }
}
