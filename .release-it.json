{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "release": true
  },
  "hooks": {
    "before:init": ["git pull", "pnpm lint", "pnpm build"]
  },
  "plugins": {
    "release-it-beautiful-changelog": {
      "disable": false,
      "changelogFile": "./CHANGELOG.md"
    }
  }
}
